# Olympics TV Project - Environment Configuration Template
# Copy this file to .env and fill in your values

# Environment Type (development, production, testing)
ENVIRONMENT=production
DEBUG=false

# Database Configuration (Primary - use this format for production)
DATABASE_URL=postgresql://olympics_user:YOUR_SECURE_PASSWORD@localhost:5432/olympics_tv

# Legacy Database Variables (for backwards compatibility)
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=olympics_tv
DB_USER=stosh99
DB_PASSWORD=your_secure_password_here

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
API_TITLE=Olympics TV API
API_VERSION=1.0.0
SECRET_KEY=generate-a-random-secret-key-using-secrets.token_urlsafe(32)

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.watcholympics2026.com

# Server Configuration
LOG_LEVEL=INFO
CORS_ORIGINS=https://watcholympics2026.com,https://www.watcholympics2026.com
ALLOWED_ORIGINS=https://watcholympics2026.com,https://www.watcholympics2026.com

# Data Source URLs
OLYMPICS_API_BASE=https://www.olympics.com/wmr-owg2026/schedules/api/ENG/schedule/lite/day
NBC_API_BASE=https://schedules.nbcolympics.com/api/v1/schedule

# Timezone
TIMEZONE=America/New_York

# Olympics Dates
OLYMPICS_START_DATE=2026-02-04
OLYMPICS_END_DATE=2026-02-22
